<h1>Product: <%= @product.name %></h1>
<h3>Cost: <%= @product.cost %></h3>
<h3>Place of Origin: <%= @product.country_of_origin %></h3>
<% if current_user && current_user.admin %>
  <button class="btn btn-outline-dark btn-sm"><%= link_to "Edit Product", edit_product_path(@product) %></button>
  <button class="btn btn-outline-dark btn-sm"><%= link_to "Delete Product", product_path(@product),
                    :data => {:confirm => "Are you sure?",
                    :method => "delete"}  %></button>
<% else %>
  <button class="btn btn-outline-dark btn-sm"><%= link_to "Write a Review", new_product_review_path(@product.id) %></button>
<% end %>

<ul>
  <% if @reviews.any? %>
    <% @reviews.each do |review| %>
      <li>Reviewed by: <%= link_to review.author, product_review_path(@product, review) %></li>
    <% end %>
    <% else %>
      <h2>This product does not have any reviews yet.</h2>
    <% end %>
</ul>
